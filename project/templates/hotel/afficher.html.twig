{% extends 'base-back.html.twig' %}



{% block content %}
<br>


        
                

        <div class="container-fluid pt-4 px-4">
        
                <div class="row g-4">
                
                    <div class="col-12">
                    
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Liste des hotels </h6>
                            <form method="POST" class="form-horizontal" >
                            
                                <select name="sort" id="cars">
                                    <option value="name">nom</option>
                                    <option value="nbr_exp">nbr de chambre </option> 
                                    <option value="default">default </option>     
                                </select>                                
                                <input type="submit" class="btn btn-primary" value="Trier">
                            
                            <form>
                            <a class="btn btn-primary" href="{{ path('hoteldownloadpdf') }}">telecharger pdf</a>
                            <td>  <a class="btn btn-primary" href="{{ path('ajouterhotel') }}">Ajouter</a> <td> 

                            <table class="table ">
                                <thead>
                                    <tr>
                                        <th scope="col">id</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Localisation</th>
                                        <th scope="col">description</th>
                                        <th scope="col">nombre de chambre</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {% for data in list %}

                                    <tr>
                                    <th scope="row"> {{ data.id}} </th>
                                    <td> {{ data.name }} </td>
                                    <td> {{data.email}} </td>
                                    <td> {{data.localisation}} </td>
                                    <td> {{data.description}} </td>
                                    <td> {{data.nbrchambre}} </td>
                                    <td> <a class="btn btn-primary" href="{{ path('modifierhotel', {'id': data.id }) }}">modifier</a></td>
                                    <td>  <a class="btn btn-primary" href="{{ path('supprimerhotel', {'id': data.id }) }}">supprimer</a> <td> 

                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
        </div>

        <div id="div_chart"></div>

        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
            {{ gc_draw(BarChart, 'div_chart') }}
        </script>



{% endblock %}
