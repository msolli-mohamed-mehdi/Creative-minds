{% extends 'base-back.html.twig' %}


{% block content %}
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Ajouter une reservation</h6>
                        

                            {{form_start(formresoffre) }} 
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">ID offre</label>
                                    {{form_widget(formresoffre.Offre ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">ID client</label>
                                    {{form_widget(formresoffre.Client ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>
 
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Nbr de place</label>
                                    {{form_widget(formresoffre.nbr_de_place ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Date reservation </label>
                                    {{form_widget(formresoffre.date_res ,{'attr':{class: 'form-control'}})}}
                                    
                                </div>


                                <br>
                                <button type="submit" class="btn btn-primary">Ajouter</button>
                            {{form_end(formresoffre) }} 
                        </div>
                    </div>

                </div>
            </div>

{% endblock %}






















